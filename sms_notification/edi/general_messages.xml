<?xml version="1.0" ?>
<odoo>
    <data>
        <record id="sms_template_christmas" model="sms.notification.template">
            <field name="name">Christmas Wishes</field>
            <field name="model_id" ref="base.model_res_partner"/>
            <field name="globally_access" eval="True"/>
            <field name="auto_delete" eval="True"/>
            <field name="sms_body_html">
                <![CDATA[
                Wishing you and your family a very Merry Christmas. May this joyful season greet you with health and happiness.
                            ]]>
            </field>
        </record>
        <record id="sms_template_new_year" model="sms.notification.template">
            <field name="name">Happy New Year Wishes</field>
            <field name="globally_access" eval="True"/>
            <field name="model_id" ref="base.model_res_partner"/>
            <field name="auto_delete" eval="True"/>
            <field name="sms_body_html">
                <![CDATA[
                Wishing you a Happy New Year with the hope that you will have many blessings in the year to come.
                            ]]>
            </field>
        </record>
        <record id="sms_template_birthday" model="sms.notification.template">
            <field name="name">Birthday Wishes</field>
            <field name="model_id" ref="base.model_res_partner"/>
            <field name="globally_access" eval="True"/>
            <field name="auto_delete" eval="True"/>
            <field name="sms_body_html">
                <![CDATA[
                May your memories today be awesome, your dreams become a reality, your joy last forever. Have a wonderful birthday.
                            ]]>
            </field>
        </record>
    </data>
</odoo>