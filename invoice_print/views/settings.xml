<odoo>
    <data>
              <record id="invoice_note_res_config_settings" model="ir.ui.view">
            <field name="name">res.config.settings.form.view</field>
            <field name="model">res.config.settings</field>
           <field name="inherit_id" ref="base.res_config_settings_view_form" />
        <field name="arch" type="xml">
            <xpath expr="//div[hasclass('settings')]" position="inside">
<!--                    <h2>Invoice Terms And Conditions</h2>-->

                <div class="row mt16 o_settings_container" id="customer_invoice_note">
                    <div class="col-xs-12 col-md-6 o_setting_box">
                        <div class="o_setting_right_pane">
                            <label for="account_note" />
                            <div class="content-group mt16">
                                <field name="account_note"/>
                            </div>
                        </div>
                    </div>
                </div>
            </xpath>
            </field>
        </record>
    </data>
</odoo>